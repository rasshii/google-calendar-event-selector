{
  "name": "google-calendar-time-slot-selector",
  "version": "2.0.0",
  "description": "Googleカレンダー上で空白箇所をドラッグ選択して、日時範囲をコピーできるChrome拡張機能",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc && vite build",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "chrome-extension",
    "google-calendar",
    "productivity",
    "time-management"
  ],
  "author": "rasshii",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "sharp": "^0.34.5",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "vite-plugin-static-copy": "^1.0.0"
  }
}
