{
  "manifest_version": 3,
  "name": "Google Calendar Event Selector",
  "version": "1.1.0",
  "description": "Googleカレンダー上で複数の予定を選択して、日時範囲をコピーできる拡張機能",
  "permissions": [
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://calendar.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
